{
  "name": "textmodifications-vscode",
  "displayName": "VS Code Text Modifications",
  "description": "A collection of text modifications.",
  "publisher": "everyonesoftware",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/everyonesoftware/textmodifications-vscode-typescript"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./outputs/sources/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "textmodifications-vscode.toLowercase",
        "title": "To Lowercase",
        "category": "Text Modifications",
        "enablement": "editorHasSelection"
      },
      {
        "command": "textmodifications-vscode.toUppercase",
        "title": "To Uppercase",
        "category": "Text Modifications",
        "enablement": "editorHasSelection"
      }
    ],
    "keybindings":[
      {
        "command": "textmodifications-vscode.toLowercase",
        "key": "ctrl+shift+l"
      },
      {
        "command": "textmodifications-vscode.toUppercase",
        "key": "ctrl+shift+u"
      }
    ],
    "submenus": [
      {
        "id": "textmodifications-vscode.text",
        "label": "Text"
      }
    ],
    "menus": {
      "textmodifications-vscode.text": [
        {
          "command": "textmodifications-vscode.toLowercase"
        },
        {
          "command": "textmodifications-vscode.toUppercase"
        }
      ],
      "editor/context": [
        {
          "submenu": "textmodifications-vscode.text",
          "group": "textmodifications"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc",
    "lint": "eslint sources --ext ts",
    "build": "npm run compile && npm run lint",
    "just-integration-tests": "c8 --src=sources vscode-test",
    "integration-tests": "npm run build && npm run just-integration-tests",
    "just-unit-tests": "c8 --exclude sources/extension.ts --exclude tests/integration mocha --spec=outputs/tests/unit",
    "unit-tests": "npm run build && npm run just-unit-tests",
    "test": "npm run build && npm run just-unit-tests && npm run just-integration-tests"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "2.22.0",
    "@types/assert": "1.5.10",
    "assert": "2.1.0",
    "mocha": "10.2.0",
    "c8": "8.0.1",
    "source-map-support": "0.5.21"
  },
  "mocha": {
      "color": true,
      "ui": "tdd",
      "spec": "./outputs/tests/unit/**/*.js",
      "extension": [
          "js"
      ],
      "require": [
          "source-map-support/register"
      ]
  },
  "c8": {
    "all": true,
    "src": ["sources", "tests"],
    "temp-directory": "outputs/coverage-temp",
    "report-dir": "outputs/coverage",
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ]
  }
}
